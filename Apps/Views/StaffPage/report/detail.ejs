<%-include ('../layouts/header.ejs')-%>
<div class="content-wrapper">
   <!-- Content Header (Page header) -->
   <!-- Main content -->
   <main class="main-container container">
      <div class="view-account">
         <section class="module">
            <div class="module-inner">
               <h3 class="fieldset-title">Full Name: <%=user_info.User.User_full%></h3>
               <input type="hidden" id="user_id" value="<%=user_info.User._id%>">
               <input type="hidden" id="user_name" value="<%=user_info.User.User_full%>">
               <div class="content-panel">
                  <canvas id="Detail" width="800" height="450"></canvas>
               </div>
            </div>
            <div class="clearfix"></div>
            <h3 style="text-align: center;">Statistics the number of people interacting</h3>
            <div class="table-responsive" style="margin-left: 100px; margin-right: 100px; height: 500px;">
               <table class="table table-striped table-hover" border="2">
                  <tr>
                     <th>Sent</th>
                     <th>Receive</th>
                  </tr>
                  <tr>
                      <td id="sent"></td>
                      <td id="receive"></td>
                  </tr>
               </table>
               <table class="table table-striped table-hover" border="2">
                  <tr>
                     <th>Sent</th>
                     <th>Receive</th>
                  </tr>
                  <tr>
                      <td id="h_sent"></td>
                      <td id="h_receive"></td>
                  </tr>
               </table>
               <div class="form-group">
                  <div class="col-md-10 col-sm-9 col-xs-12 col-md-push-2 col-sm-push-3 col-xs-push-0">
                     <a class="btn btn-danger" href="/staff/chart" role="button">Back</a>
                  </div>
               </div>
            </div>
      </div>
</div>
</section>
</div>
</main>
<!-- /.content -->
<script src="/socket.io/socket.io.js"></script>
<script src="/static/User/js/chart.js"></script>
<script>
   socket.on('message_detail', (arr_mess_sent, arr_mess_receiver)=>{
      let user = document.getElementById('user_name').value
      let num_sent = arr_mess_sent.length
      let num_receive = arr_mess_receiver.length
      new Chart(document.getElementById("Detail"), {
         type: 'bar',
         data: {
           labels: [user],
           datasets: [
             {
               label: "Sent",
               backgroundColor: "#3e95cd",
               data: [num_sent]
             }, {
               label: "Receive",
               backgroundColor: "#8e5ea2",
               data: [num_receive]
             }
           ]
         },
         options: {
           title: {
             display: true,
             text: 'Statistics of the number of messages'
           }
         }
     });
   })
</script>

<%-include ('../layouts/footer.ejs')-%>