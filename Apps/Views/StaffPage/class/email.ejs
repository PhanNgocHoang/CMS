<%-include ('../layouts/header.ejs')-%>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Class Management
        </h1>
    </section>

<!-- Main content -->
<main class="main-container container">
    <div class="view-account">
        <section class="module">
            <div class="module-inner">
                <div class="content-panel">
                    <form class="form-horizontal" method="POST">
                        <fieldset class="fieldset">
                            <h3 class="fieldset-title">New Email</h3>

                            <div class="form-group">
                                <div class="col-md-8 col-sm-9 col-xs-12">
                                    <input type="email" class="form-control" value="" name="emainsend" required placeholder="To">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-8 col-sm-9 col-xs-12">
                                    <input type="text" class="form-control" value="" name="subject" required placeholder="Subject">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-8 col-sm-9 col-xs-12">
                                    <textarea name="message" class="form-control textarea" placeholder="Content" style="height: 200px"></textarea>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-4 col-sm-4 col-xs-4">
                                    <input type="file" class="form-control" value="" name="file">
                                </div>
                            </div>
                        </fieldset>
                        <hr>
                        <div class="form-group">
                            <div class="col-md-10 col-sm-9 col-xs-12 col-md-push-2 col-sm-push-3 col-xs-push-0">
                                <input class="btn btn-primary" type="submit" value="Send">
                                <a class="btn btn-secondary" href="#">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</main>
<!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%-include ('../layouts/footer')-%>