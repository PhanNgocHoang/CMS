<%-include ('../layouts/header.ejs')-%>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Manage Class
            <small>Control panel</small>
        </h1>
    </section>

    <!-- Main content -->
    <div class="col-md-10">
        <!-- Main content -->
        <main class="main-container container">
            <div class="view-account">
                <section class="module">
                    <div class="module-inner">
                        <div class="content-panel">
                            <form class="form-horizontal" style="font-size:15px;" method="POST">
                                <fieldset class="fieldset">
                                    <br> <br>
                                    <div class="form-group">
                                        <label class="col-md-2 col-sm-3 col-xs-12 control-label">Class ID:</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12" style="margin-top: 7px;">
                                            <%=data.ClassID%>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 col-sm-3 col-xs-12 control-label">Class Name:</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12" style="margin-top: 7px;">
                                            <%=data.ClassName%>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 col-sm-3 col-xs-12 control-label">Subject ID:</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12" style="margin-top: 7px;">
                                            <%=data.SubjectID%>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 col-sm-3 col-xs-12 control-label">Subject Name:</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12" style="margin-top: 7px;">
                                            <%=data.SubjectName%>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 col-sm-3 col-xs-12 control-label">Tutor:</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12" style="margin-top: 7px;">
                                            <%=data.tutor%>
                                        </div>
                                    </div>
                                </fieldset>
                                <div class="clearfix"></div>
                                <h3>List of Student in Class</h3>
                                <br>
                                <a href="/staff/Faculty/<%=data.faculty%>/Subject/<%=data.subject%>/Class/<%=data.class%>/ListStudent/<%=data.student%>" title="Add Student" class="btn btn-secondary">
                                Add Student
                                </a> &nbsp;
                                <%if(data.StudentOfClass){%>
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <tr>
                                            <th>Student ID</th>
                                            <th>Student Name</th>
                                            <th>Action</th>
                                        </tr>
                                        <tr>
                                            <%for(x in data.StudentOfClass){%>
                                            <td>
                                                <%=data.StudentOfClass[x].User_ID%>
                                            </td>
                                            <td>
                                                <%=data.StudentOfClass[x].User_full%>
                                            </td>
                                            <td>
                                                <a href="/staff/Faculty/<%=data.faculty%>/Subject/<%=data.subject%>/Class/<%=data.class%>/Detail/DeleteStudentOfClass/<%=data.StudentOfClass[x]._id%>" title="Delete"
                                                    onclick="return confirm('Are you sure delete?')">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                                <a href="#" title="Email" style="margin-left: 10px;">
                                                    <i class="glyphicon glyphicon-envelope"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <%}%>
                                    </table>
                                </div>
                                <%}%>
                                <div class="clearfix"></div>
                                <hr class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-10 col-sm-9 col-xs-12 col-md-push-2 col-sm-push-3 col-xs-push-0">
                                        <a class="btn btn-danger" href="/staff/Faculty/<%=data.faculty%>/Subject/<%=data.subject%>/Class" style="margin-left: 110px;" role="button" >Back</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </main>
    </div>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%-include ('../layouts/footer.ejs')-%>