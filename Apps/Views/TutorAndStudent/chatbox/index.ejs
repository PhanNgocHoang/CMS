<%-include('../layouts/header.ejs')-%>
<main class="main-container">
    <div class="view-account">
        <section class="module">
            <div class="module-inner">
                <div class="content-panel">
                    <%for(x in locals.user){%>
                        <input type="hidden" value="<%=locals.user[x]._id%>" id="user_id">
                        <input type="hidden" value="<%=locals.user[x].User_full%>" id="user_full">
                        <input type="hidden" value=<%=locals.role%> id="role">
                        <input type="hidden" value=<%=locals.user[x].User_avatar%> id="us_img">
                    <%}%>
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="messaging">
                            <h3 class="text-center" style="font-weight: bold;">Messaging</h3>
                            <div class="inbox_msg">
                                <div class="col-md-3 col-sm-3 col-xs-12">
                                    <div class="inbox_people">
                                        <div class="headind_srch">
                                            <div class="recent_heading">
                                                <h4>Recent</h4>
                                            </div>
                                        </div>
                                        <div class="inbox_chat">
                                            <div class="chat_list active_chat" >
                                                <div class="chat_people">
                                                    <ul class="list_people">
                                                    </ul>
                                                </div>
                                                <div class="clearfix"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    <div class="mesgs" id="list_mess">
                                        <div class="message">
                                            <div id="title"></div>
                                            <div class="msg_history">
                                                <div class="incoming_msg">
                                                    <div class="incoming_msg_img" id="img_come">

                                                    </div>
                                                    <div class="received_msg">
                                                        <div class="received_withd_msg" id="msg_come">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="outgoing_msg">
                                                    <div class="incoming_msg_img" id="img_out">

                                                    </div>
                                                    <div class="sent_msg" id="my_msg">

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="type_msg" id="send-mess">
                                                <div class="input_msg_write">
                                                <input type="text" placeholder="Type a message" id="input-message"/>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                            <br>
                                            <br>
                                            <!-- <input class="btn btn-info" type="button" id="set_meet" value="Set meet">
                                            <input class="btn btn-info" type="button" id="upload-file" value="Send File">
                                            <input class="btn btn-info" type="button" id="list_meet" value="List Meet">
                                            <input class="btn btn-info" type="button" id="list-upload-file" value="List File Share"> -->
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-3 col-xs-12">
                                    <div class="list-file-schedual">
                                        <div class="col-md-12 col-sm-12 col-xs-12 table-responsive">
                                            <h5 style="margin-top: 10px;">List File Shared</h5>
                                            <table class="table table-striped table-hover" style="margin-top: 10px;">
                                                <tr>
                                                    <th>
                                                        File Name
                                                    </th>
                                                    <th>
                                                        Note
                                                    </th>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <ul id="l_files">
                                    
                                                        </ul>
                                                    </td>
                                                    <td>
                                                        <ul id="note_file">
                                    
                                                        </ul>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                        <div class="col-md-12 col-sm-12 col-xs-12 table-responsive">
                                            <h5 style="margin-top: 10px;">List Meet</h5>
                                            <table class="table table-striped table-hover" style="margin-top: 10px;">
                                                <tr>
                                                    <th>
                                                        Date
                                                    </th>
                                                    <th>
                                                        Time
                                                    </th>
                                                    <th>
                                                        Place
                                                    </th>
                                                    <th>
                                                        Note
                                                    </th>
                                                </tr>
                                                <tr id="tb-set-meet">
                                                    <td id="li-date">
                                                        <ul id="date_meet">
                                    
                                                        </ul>
                                                    </td>
                                                    <td id="li-time">
                                                        <ul id="time_meet">
                                    
                                                        </ul>
                                                    </td>
                                                    <td id="li-place">
                                                        <ul id="place_meet">
                                    
                                                        </ul>
                                                    </td>
                                                    <td id="li-note">
                                                        <ul id="note_meet">
                                    
                                                        </ul>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/static/User/js/chat.js"></script>
<%-include('../layouts/footer.ejs')-%>